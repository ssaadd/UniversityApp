@model University.ViewModels.LoginModel
@{
    Layout = "_Layin";
    ViewData["Title"] = "Вход на сайт";
}

<div class="container container-table">
    <div class="row vertical-center-row">
        <div class="col-md-4 col-md-offset-4">
            <h2>Вход на сайт</h2>
            <br>
            <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="form-group input-group input-group-lg">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-user"> </span><span asp-validation-for="Email"></span></span>
                    <input type="text" asp-for="Email" class="form-control" placeholder="Email">

                </div>
                <div class="form-group input-group input-group-lg">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-eye-close"> </span><span asp-validation-for="Password"></span></span>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                </div>
                <div class="form-group input-group input-group-lg col-md-8 col-md-offset-2 col-xs-12">
                    <button type="submit" name="submit" value="Войти" class="btn btn-default form-control">
                        <span class="glyphicon glyphicon-log-in"></span> Войти
                    </button>
                </div>
                <div class="form-group input-group input-group-lg col-md-8 col-md-offset-2 col-xs-12">
                    <button type="submit" name="submit" value="Регистрация" class="btn btn-default form-control" asp-action="Register" asp-controller="Account">
                        <span class="glyphicon glyphicon-bitcoin"></span> Регистрация
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>