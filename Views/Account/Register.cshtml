@model University.ViewModels.RegisterModel
@{
    Layout = "_Layin";
}
<div class="container container-table">
    <div class="row vertical-center-row">
        <div class="col-md-4 col-md-offset-4">
            <h2>Регистрация</h2>
            <br>
            <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="form-group input-group input-group-lg">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span> <span asp-validation-for="Email"></span></span>
                    <input type="text" asp-for="Email" class="form-control" placeholder="Введите Email">
                </div>
                <div class="form-group input-group input-group-lg">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-eye-close"></span> <span asp-validation-for="Password"></span></span>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Введите пароль">
                </div>
                <div class="form-group input-group input-group-lg">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-eye-close"></span> <span asp-validation-for="ConfirmPassword"></span></span>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Повторите пароль">
                </div>
                <div class="form-group input-group input-group-lg col-md-8 col-md-offset-2 col-xs-12">
                    <button type="submit" name="submit" value="Регистрация" class="btn btn-default form-control">
                        <span class="glyphicon glyphicon-registration-mark"></span> Регистрация
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>