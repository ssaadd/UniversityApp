@model University.Models.Faculty

@{
    ViewData["Title"] = "Добавить запись";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Создать</h2>

<h4>Факультет</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameFaculty" class="control-label"></label>
                <input asp-for="NameFaculty" class="form-control" />
                <span asp-validation-for="NameFaculty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
